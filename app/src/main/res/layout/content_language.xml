<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/balloon_background2">

    <ImageView
        android:layout_width="360dp"
        android:layout_height="480dp"
        android:src="@drawable/picsart_09_10_06_33_55"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:tint="#E7F6FB"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/select_language"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="Select Language"
        android:textColor="#FF5722"
        android:textStyle="bold"


        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/malaysian"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/malaysian"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:background="@drawable/background"
        android:text="Malaysian"
        android:textSize="27sp"
        android:textStyle="bold"


        android:textColor="#0828DC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/english"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:background="@drawable/background"
        android:text="English"
        android:textSize="27sp"
        android:textStyle="bold"


        android:textColor="#0828DC"
        app:layout_constraintBottom_toBottomOf="parent"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/malaysian"
        app:layout_constraintVertical_bias="0.059"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>